{% extends 'base.html.twig' %}
{% block title %}{{ 'Audicoci | Nos Actualités' }}{% endblock %}
{% block body %}
    <section class="page-title parallax parallax2">
        <div class="title-heading">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-title style1">
                            <h1>
                                {{ 'Actualités' }}
                            </h1>
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="{{ path('index_page') }}" title="">{{ 'Accueil' }}</a><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                                    <li><a href="{{ path('page_blog') }}" title="{{ 'Actualités' }}">{{ 'Actualités' }}</a><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                                </ul>
                            </div><!-- /.breadcrumbs -->
                        </div><!-- /.box-title -->
                    </div><!-- /.col-md-12 -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.title-heading -->
        <div class="overlay-black"></div>
    </section><!-- /.page-title parallax -->
    <section class="flat-imagebox style2 background">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="flat-title">
                        <h3 class="font-weight-3">{{ 'News, Astuces & Conseils' }}</h3>
                    </div><!-- /.flat-title -->
                </div><!-- /.col-md-12 -->
            </div><!-- /.row -->
            <div class="row">
                {% for post in posts %}
                <div class="col-md-4">
                    <div class="imagebox style2 v4">
                        <div class="imagebox-image">
                            <img src="{{ post.assertPath|imagine_filter('thumb_medium') }}" alt="{{ post.title }}">
                        </div><!-- /.imagebox-image -->
                        <div class="imagebox-content">
                            <h6><a href="{{ path('page_blog_detail', {'slug': post.slug }) }}" title="{{ post.title }}">{{ post.title|truncate(20, null, '...') }}</a></h6>
                            <p>{{ post.content|raw|truncate(120, null, '...') }}</p>
                            <div class="more-link">
                                <a href="{{ path('page_blog_detail', {'slug': post.slug }) }}" title="{{ post.title }}">{{ 'Lire l\'article'|upper }}</a>
                            </div>
                        </div><!-- /.imagebox-content -->
                    </div><!-- /.imagebox style2 v4 -->
                </div><!-- /.col-md-4 -->
                {% endfor %}
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section>
{% endblock %}

